<Window x:Class="DragAndDrop_ReorderAndExternal.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:local="clr-namespace:DragAndDrop_ReorderAndExternal" Title="Window1" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True" DockPanel.Dock="Left">
            <dxg:GridControl.View>
                <dxg:TableView Name="view" AutoWidth="True" NavigationStyle="Row" AllowSorting="False" ShowGroupPanel="False" />
            </dxg:GridControl.View>
        </dxg:GridControl>
        <ListBox Name="draggedRowsList" Grid.Column="1" DisplayMemberPath="Text" />
    </Grid>
</Window>
